        "/ns/coms/up": {
            "post": {
                "tags": ["comment"],
                "summary": "评论点赞",
                "description": "对某一个新闻评论进行点赞",
                "parameters": [{
                    "name": "Authorization",
                    "in": "header",
                    "description": "用户token",
                    "required": true,
                    "type": "string"
                },{
                    "name": "X-Requested-With",
                    "default": "*",
                    "in": "header",
                    "description": "用户token",
                    "required": false,
                    "type": "string"
                },{
                    "name": "uid",
                    "in": "query",
                    "description": "用户ID",
                    "required": true,
                    "type": "string"
                }, {
                    "name": "ciu",
                    "in": "query",
                    "description": "评论ID",
                    "required": false,
                    "default": "1",
                    "type": "string"
                }],
                "responses": {
                    "200": {
                        "description": "完成请求",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "code": {
                                    "description": "服务器返回请求处理代码",
                                    "type": "integer",
                                    "format": "int32"
                                },
                                "data": {
                                    "description": "更新后的赞数",
                                    "type": "integer",
                                    "format": "int32"
                                },
                            }
                        }
                    }
                }
            },
            "delete": {
                "tags": ["comment"],
