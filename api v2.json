                    "type": "string"
                }
            }
        },
        "visitorsRegister": {
            "type": "object",
            "properties": {
                "utype": {
                    "description": "用户类型注释1.本地注册用户 2游客用户 3微博用户 4微信用户",
                    "type": "integer",
                    "format": "int32"
                },
                "platform": {
                    "description": "用户平台注释 1.IOS 2安卓 3网页 4无法识别",
                    "type": "integer",
                    "format": "int32"
                },
                "province": {
                    "description": "用户注册时所在的省份",
                    "type": "string"
                },
                "city": {
                    "description": "用户注册时所在的城市",
                    "type": "string"
                },
                "district": {
                    "description": "用户注册时所在的市区",
                    "type": "string"
                }
            }
        },
        "userRegister": {
            "type": "object",
            "properties": {
                "muid": {
                    "description": "游客ID ， 注册第三方用户的时候，必须本季已经存在一个游客的时候。",
                    "type": "integer",
                    "format": "int32"
                },
                "msuid": {
                    "description": "三方用户相互合并时提供对应的三方用户ID",
                    "type": "string"
                },
                "utype": {
                    "description": "用户类型注释1.本地注册用户 2游客用户 3微博用户 4微信用户",
                    "type": "integer",
                    "format": "int32"
                },
                "platform": {
                    "description": "用户平台注释 1.IOS 2安卓 3网页 4无法识别",
                    "type": "integer",
                    "format": "int32"
                },

                "suid": {
                    "description": "三方用户ID",
                    "type": "string"
                },
                "stoken": {
                    "description": "三方用户Token",
                    "type": "string"
                },
                "sexpires": {
                    "description": "三房token 过期时间",
                    "type": "string"
                },
                "uname": {
                    "description": "用户名称",
                    "type": "string"
                },
                "gender": {
                    "description": "用户性别",
                    "type": "integer",
                    "format": "int32"
                },
                "avatar": {
                    "description": "用户头像",
                    "type": "string"
                },
                "averse": {
                    "description": "用户的不喜欢的标签列表",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "prefer": {
                    "description": "用户的喜欢的标签列表",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "province": {
                    "description": "用户注册时所在的省份",
                    "type": "string"
                },
                "city": {
                    "description": "用户注册时所在的城市",
                    "type": "string"
                },
                "district": {
                    "description": "用户注册时所在的市区",
                    "type": "string"
                }
            }
        },
        "visitorsUser": {
            "type": "object",
            "properties": {
                "code": {
                    "description": "返回请求状态码",
                    "type": "integer",
                    "format": "int32"
                },
                "data": {
                    "type": "object",
                    "properties": {
                        "utype": {
                            "description": "用户的类型",
                            "type": "integer",
                            "format": "int32"
                        },
                        "uid": {
                            "description": "用户的id 唯一标示",
                            "type": "integer",
                            "format": "int32"
                        },
                        "password": {
                            "description": "用户的 token",
                            "type": "string"
                        },
                        "channel": {
                            "description": "用户的频道列表",
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "user": {
