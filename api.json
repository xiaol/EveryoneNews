                    "format": "int32"
                },
                "message": {
                    "description": "返回消息",
                    "type": "string"
                },
                "data": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "cname": {
                                "description": "频道名称",
                                "type": "string"
                            },
                            "online": {
