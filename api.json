{
    "swagger": "2.0",
    "info": {
        "title": "奇点资讯API文档",
        "description": "这是一个文档",
        "version": "1.0.0"
    },
    "host": "api.deeporiginalx.com",
    "schemes": [
        "http"
    ],
    "basePath": "/bdp/news",
    "produces": [
        "application/json"
    ],
    "paths": {
        "/channels": {
            "get": {
                "summary": "获取频道",
                "description": "频道列表查询",
                "tags": [
                    "Channels"
                ],
                "parameters": [{
                    "name": "online",
                    "in": "query",
                    "type": "string",
                    "description": "标示所请求的频道是不是上线的",
                    "required": false
                }],
                "responses": {
                    "200": {
                        "description": "完成请求",
                        "schema": {
                            "type": "object",
                            "items": {
                                "$ref": "#/definitions/channel"
                            }
                        }
                    }
                }
            }
        },
        "/load": {
            "get": {
                "summary": "新闻列表页加载 － 上拉加载",
                "description": "新闻客户端-上拉新闻列表页加载",
                "tags": [
                    "News"
                ],
                "parameters": [{
                    "name": "cid",
                    "in": "query",
                    "type": "string",
                    "description": "频道ID",
                    "required": true
                }, {
                    "name": "page",
                    "in": "query",
                    "type": "string",
                    "description": "页数",
                    "required": false
                }, {
                    "name": "offset",
                    "in": "query",
                    "type": "string",
                    "description": "条数",
                    "required": false
                }, {
                    "name": "tstart",
                    "in": "query",
                    "type": "string",
                    "description": "起始时间",
                    "required": true
                }],
                "responses": {
                    "200": {
                        "description": "完成请求",
                        "schema": {
                            "type": "object",
                            "items": {
                                "$ref": "#/definitions/news"
                            }
                        }
                    }
                }
            }
        },
        "/refresh": {
            "get": {
                "summary": "新闻列表页加载 - 下拉刷新",
                "description": "新闻客户端-下拉新闻列表页刷新",
                "tags": [
                    "News"
                ],
                "parameters": [{
                    "name": "cid",
                    "in": "query",
                    "type": "string",
                    "description": "频道ID",
                    "required": true
                }, {
                    "name": "page",
                    "in": "query",
                    "type": "string",
                    "description": "页数",
                    "required": false
                }, {
                    "name": "offset",
                    "in": "query",
                    "type": "string",
                    "description": "条数",
                    "required": false
                }, {
                    "name": "tstart",
                    "in": "query",
                    "type": "string",
                    "description": "起始时间",
                    "required": false
                }],
                "responses": {
                    "200": {
                        "description": "完成请求",
                        "schema": {
                            "type": "object",
                            "items": {
                                "$ref": "#/definitions/news"
                            }
                        }
                    }
                }
            }
        }
    },
